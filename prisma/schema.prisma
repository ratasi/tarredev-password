generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String?
  username       String?  @unique
  email          String?  @unique
  image          String?
  coverImage     String?
  profileImage   String?
  hashedPassword String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  elements Element[]
}

model Element {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String?
  typeElement String //inicio de sesi√≥n - Tarjeta - identidad
  isFavourite Boolean
  urlWebsite  String?
  username    String?
  password    String?
  notes       String?
  userId      String  @db.ObjectId
  directory   String?

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
